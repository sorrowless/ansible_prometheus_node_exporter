[Unit]
Description=Node exporter service
After=network.target

[Service]
User=root
Group=root
ExecStart=/usr/local/bin/node_exporter --collector.systemd --web.listen-address="{{ node_exporter_host_address }}:{{ node_exporter_host_port }}"
ExecStop=/bin/kill -s TERM $MAINPID
PrivateTmp=true
Restart=on-failure
NoNewPrivileges=yes

[Install]
WantedBy=multi-user.target
